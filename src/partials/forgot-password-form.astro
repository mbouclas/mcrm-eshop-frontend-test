---
import Error from "@components/Error.astro";

const {inPlace = false} = Astro.props;

---
<div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
<h1 class="text-center font-bold text-3xl my-4">Reset Your Password</h1>
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <form class="space-y-6" x-ref="forgotPasswordForm" action="" method="POST" @submit.prevent="forgotPassword()" data-inPlace={inPlace}>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Email address</label>
          <div class="mt-1">
            <input id="email" name="email" type="email" autocomplete="email" x-model="email"
            required class="block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-gray-500 focus:outline-none focus:ring-gray-500 sm:text-sm">
          </div>
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-700">New Password</label>
          <div class="mt-1">
            <input id="newPassword" name="newPassword" type="password"  x-model="newPassword"
             autocomplete="current-password" required class="block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-gray-500 focus:outline-none focus:ring-gray-500 sm:text-sm">
          </div>
        </div>
        <div>
          <button type="submit" class="flex w-full justify-center rounded-md border border-transparent bg-black py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-opacity-80 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">Reset password</button>
        </div>
      </form>

      <div class="mt-6">
         <template x-if="error">
          <Error message="'Error registering: ' + error" />
        </template>
      </div>
    </div>
  </div>