---
import {IEditableRegion} from "../models/editable-regions.model";
import {optimizeCloudinaryImage} from "../helpers/cloudinary.helper";
interface IHeroProps {
  item: IEditableRegion;
}
const {item} = Astro.props as IHeroProps;

---
<section class="w-full">
  <div class="container px-4 2xl:px-20">
    <div class="flex flex-col items-center lg:flex-row">
      <div class="w-full px-6 pb-4 lg:pb-0 lg:w-1/2">
        <h4
          class="mb-6 text-5xl font-bold text-center lg:text-5xl lg:text-left"
        >
          {item.items[0].item.title}
        </h4>
        <p class="mt-4 text-lg text-center lg:text-left">
          {item.items[0].item.metaData['subTitle']}
        </p>
        <div class="my-4 text-center">
          <a
            href={item.items[0].item.metaData['cta']['url']}
            class="flex items-center justify-center w-full lg:justify-start"
          >
            <span>{item.items[0].item.metaData['cta']['title']}</span>
            <span class="ml-1"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-6 h-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </span>
          </a>
        </div>
      </div>
      <div class="w-full lg:w-1/2">
        <img
          src={optimizeCloudinaryImage(item.items[0].item.metaData['image']['url'], 680)}
          alt={optimizeCloudinaryImage(item.items[0].item.metaData['image']['alt'])}
          title={optimizeCloudinaryImage(item.items[0].item.metaData['image']['caption'])}
          srcset=""
        />
      </div>
    </div>
  </div>
</section>
